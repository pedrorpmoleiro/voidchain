  <property name="project.jdk.home" value="${jdk.home.open-14}"/>
  <property name="project.jdk.bin" value="${jdk.bin.open-14}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.open-14"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.core-0.1.4.classpath">
    <pathelement location="${basedir}/bft-smart/lib/core-0.1.4.jar"/>
  </path>
  
