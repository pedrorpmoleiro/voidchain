  </path>
  
  <path id="library.maven:_org.junit.platform:junit-platform-engine:1.6.1.classpath">
    <pathelement location="${path.variable.maven_repository}/org/junit/platform/junit-platform-engine/1.6.1/junit-platform-engine-1.6.1.jar"/>
