<?xml version="1.0" encoding="UTF-8"?>
<project name="module_voidchain" default="compile.module.voidchain">
  <dirname property="module.voidchain.basedir" file="${ant.file.module_voidchain}"/>
  
  <property name="module.jdk.home.voidchain" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.voidchain" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.voidchain" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.voidchain" value="-encoding UTF-8 -source 14 -target 14 ${compiler.args}"/>
  
  <property name="voidchain.output.dir" value="${module.voidchain.basedir}/target/classes"/>
  <property name="voidchain.testoutput.dir" value="${module.voidchain.basedir}/target/test-classes"/>
  
  <path id="voidchain.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="voidchain.module.production.classpath">
    <path refid="${module.jdk.classpath.voidchain}"/>
    <path refid="library.maven:_org.bouncycastle:bcprov-jdk15on:1.64.classpath"/>
  </path>
  
  <path id="voidchain.runtime.production.module.classpath">
    <pathelement location="${voidchain.output.dir}"/>
    <path refid="library.maven:_org.bouncycastle:bcprov-jdk15on:1.64.classpath"/>
  </path>
  
  <path id="voidchain.module.classpath">
    <path refid="${module.jdk.classpath.voidchain}"/>
    <pathelement location="${voidchain.output.dir}"/>
    <path refid="library.maven:_org.junit.jupiter:junit-jupiter:5.6.1.classpath"/>
    <path refid="library.maven:_org.junit.jupiter:junit-jupiter-api:5.6.1.classpath"/>
    <path refid="library.maven:_org.apiguardian:apiguardian-api:1.1.0.classpath"/>
    <path refid="library.maven:_org.opentest4j:opentest4j:1.2.0.classpath"/>
    <path refid="library.maven:_org.junit.platform:junit-platform-commons:1.6.1.classpath"/>
    <path refid="library.maven:_org.junit.jupiter:junit-jupiter-params:5.6.1.classpath"/>
    <path refid="library.maven:_org.junit.jupiter:junit-jupiter-engine:5.6.1.classpath"/>
    <path refid="library.maven:_org.junit.platform:junit-platform-engine:1.6.1.classpath"/>
    <path refid="library.maven:_org.bouncycastle:bcprov-jdk15on:1.64.classpath"/>
  </path>
  
  <path id="voidchain.runtime.module.classpath">
    <pathelement location="${voidchain.testoutput.dir}"/>
    <pathelement location="${voidchain.output.dir}"/>
    <path refid="library.maven:_org.junit.jupiter:junit-jupiter:5.6.1.classpath"/>
    <path refid="library.maven:_org.junit.jupiter:junit-jupiter-api:5.6.1.classpath"/>
    <path refid="library.maven:_org.apiguardian:apiguardian-api:1.1.0.classpath"/>
    <path refid="library.maven:_org.opentest4j:opentest4j:1.2.0.classpath"/>
    <path refid="library.maven:_org.junit.platform:junit-platform-commons:1.6.1.classpath"/>
    <path refid="library.maven:_org.junit.jupiter:junit-jupiter-params:5.6.1.classpath"/>
    <path refid="library.maven:_org.junit.jupiter:junit-jupiter-engine:5.6.1.classpath"/>
    <path refid="library.maven:_org.junit.platform:junit-platform-engine:1.6.1.classpath"/>
    <path refid="library.maven:_org.bouncycastle:bcprov-jdk15on:1.64.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.voidchain">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.voidchain">
    <patternset refid="excluded.from.module.voidchain"/>
  </patternset>
  
  <path id="voidchain.module.sourcepath">
    <dirset dir="${module.voidchain.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="voidchain.module.test.sourcepath">
    <dirset dir="${module.voidchain.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.voidchain" depends="compile.module.voidchain.production,compile.module.voidchain.tests" description="Compile module voidchain"/>
  
  <target name="compile.module.voidchain.production" depends="register.custom.compilers" description="Compile module voidchain; production classes">
    <mkdir dir="${voidchain.output.dir}"/>
    <javac2 destdir="${voidchain.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.voidchain}/javac">
      <compilerarg line="${compiler.args.voidchain}"/>
      <bootclasspath refid="voidchain.module.bootclasspath"/>
      <classpath refid="voidchain.module.production.classpath"/>
      <src refid="voidchain.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.voidchain"/>
    </javac2>
    
    <copy todir="${voidchain.output.dir}">
      <fileset dir="${module.voidchain.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.voidchain.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.voidchain.tests" depends="register.custom.compilers,compile.module.voidchain.production" description="compile module voidchain; test classes" unless="skip.tests">
    <mkdir dir="${voidchain.testoutput.dir}"/>
    <javac2 destdir="${voidchain.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.voidchain}/javac">
      <compilerarg line="${compiler.args.voidchain}"/>
      <bootclasspath refid="voidchain.module.bootclasspath"/>
      <classpath refid="voidchain.module.classpath"/>
      <src refid="voidchain.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.voidchain"/>
    </javac2>
    
    <copy todir="${voidchain.testoutput.dir}">
      <fileset dir="${module.voidchain.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.voidchain" description="cleanup module">
    <delete dir="${voidchain.output.dir}"/>
    <delete dir="${voidchain.testoutput.dir}"/>
  </target>
</project>